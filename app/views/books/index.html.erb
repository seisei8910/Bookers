<h1>Books</h1>

<% @books.each do |book| %>
  <h4>Title</h4>
  <span><%= book.title %></span>

  <h4>Body</h4>
  <span><%= book.body %></span>

  <%= link_to "Show", book_path(@books.ids) %>
  <%= link_to "Edit", edit_book_path(@books.ids) %>
  <%= link_to "Destroy", book_path(@books.ids), method: :delete, "data-confirm" => "Are you sure?" %>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h2>New book</h2>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
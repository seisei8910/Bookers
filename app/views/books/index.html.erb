<h2>Books</h2>
<div class="index-content">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td> 
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>

<div class="new">
  <h3 class="new-title">New book</h3>
  <% if @book.errors.any? %>
    <div class="erroe-box">
      <P class="erroe-lead"><b><%= @book.errors.count %> errors prohibited this book from being saved:<b></p>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
    </div>
  <div class="new-content">
    <%= form_with model: @book, url: '/books', method: :post do |f| %>
      <%= f.label :title , class: "title-label"%>
      <%= f.text_field :title %>

      <%= f.label :body , class: "body-label"%>
      <%= f.text_area :body %>

      <p><%= f.submit 'Create Book' %><p>
    <% end %>
  </div>

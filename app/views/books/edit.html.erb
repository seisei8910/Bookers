<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <div class="erroe-box">
    <p class="erroe-lead"><d><%= @book.errors.count %> errors prohibited this book from being saved:</d></p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="edit">
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <%= f.label :title , class: "title-label"%>
    <%= f.text_field :title %>

    <%= f.label :body , class: "body-label"%>
    <%= f.text_area :body %>

    <p><%= f.submit 'Update Book' %></p>

    <p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>
  <% end %>
</div>